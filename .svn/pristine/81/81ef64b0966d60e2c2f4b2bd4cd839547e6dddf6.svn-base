package com.util;

import java.text.DecimalFormat;

/**
 * 基本数据处理的方法
 * @author LJJ
 *
 */
public class DataFormat {
	
	
	/**
	 * 将一个double类型的数据保留两位小数
	 * @param d
	 * @return 
	 */
	public  static String decimalformat(Double d){
		DecimalFormat df=new DecimalFormat("#.00");
		if(d==0){
			return "0.00";
		}
		else{
			return df.format(d);
		}
	}
	
	
	
	
	
	
	
	
	
}
