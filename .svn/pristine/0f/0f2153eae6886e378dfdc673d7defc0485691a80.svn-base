html,
body {
	height: 100%;
	overflow: hidden;
	background: #EEEFF3;
}

header {
	border-bottom: 0.5px solid darkgray !important;
}

.mui-bar {
	-webkit-box-shadow: none;
	box-shadow: none;
}

#account {
	height: 50px;
	border: 0.5px solid gainsboro;
	border-bottom: 1px solid #D7D7DC;
	margin-top: 30px;
}

#pwd {
	height: 50px;
	border: 0.5px solid gainsboro;
	border-bottom: 1px solid #D7D7DC;
}

label {
	padding: auto !important;
	margin: 0 !important;
	height: 50px !important;
	width: 50px !important;
}

#pwd .show img {
	height: 1.5em;
	float: right;
	width: 24px;
	margin-top: 12px;
}

#phone,
#password {
	height: 50px;
	float: left;
}

#getCode {
	position: absolute;
	z-index: 1;
	top: 8px;
	right: 6px;
	background-color: darkgray;
	color: white;
}

#clear_pwd {
	font-size: 22px;
	position: absolute;
	z-index: 1;
	top: 13px;
	right: 30px;
	width: 38px;
	height: 38px;
	text-align: center;
	color: darkgray;
}

#clear_phone {
	font-size: 22px;
	position: absolute;
	z-index: 1;
	top: 13px;
	right: 10px;
	width: 38px;
	height: 38px;
	text-align: center;
	color: darkgray;
}

#btn_login {
	margin-top: 30px;
	font-size: 16px;
	background-color: #6CCCCA;
}

.forget {
	font-size: 14px;
	float: right;
	margin-top: 20px;
	color: #6CCCCA;
}

.otherLogin {
	position: fixed;
	bottom: 30px;
}

.item.active_item {
	color: red;
}

.items-share {
	width: 100%;
}

.items-share {
	text-align: center;
	line-height: 35px;
}

.share-item {
	width: 50px;
	height: 50px;
	text-align: center;
	line-height: 50px;
	border-radius: 30px;
}
